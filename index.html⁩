<body>

<div id="login" class="container">
  <h1>HM Follow Up</h1>
  <input type="text" id="username" placeholder="اسم المستخدم">
  <input type="password" id="password" placeholder="كلمة المرور">
  <button onclick="login()">تسجيل الدخول</button>
</div>

<div id="dashboard" class="container hidden">
  <h1>📋 التذاكر</h1>
  <div>
    <input type="text" id="ticketNumber" placeholder="رقم التذكرة">
    <input type="text" id="accountName" placeholder="اسم الحساب">
    <select id="platform">
      <option>X</option>
      <option>Instagram</option>
      <option>Email</option>
      <option>Phone Call</option>
    </select>
    <button onclick="addTicket()">➕ إضافة تذكرة</button>
  </div>

  <table>
    <thead>
      <tr>
        <th>رقم</th>
        <th>رقم التذكرة</th>
        <th>الحساب</th>
        <th>المنصة</th>
        <th>الحالة</th>
      </tr>
    </thead>
    <tbody id="ticketTable"></tbody>
  </table>
</div>

<script>
  const adminUser = "Abdullah";
  const adminPass = "A";

  function login() {
    let u = document.getElementById("username").value;
    let p = document.getElementById("password").value;
    if (u === adminUser && p === adminPass) {
      document.getElementById("login").classList.add("hidden");
      document.getElementById("dashboard").classList.remove("hidden");
      loadTickets();
    } else {
      alert("❌ اسم المستخدم أو كلمة المرور غير صحيحة");
    }
  }

  function addTicket() {
    let ticketNumber = document.getElementById("ticketNumber").value;
    let accountName = document.getElementById("accountName").value;
    let platform = document.getElementById("platform").value;

    if (!ticketNumber || !accountName) {
      alert("⚠️ يرجى إدخال جميع البيانات");
      return;
    }

    let tickets = JSON.parse(localStorage.getItem("tickets")) || [];

    if (tickets.find(t => t.ticketNumber === ticketNumber)) {
      alert("⚠️ رقم التذكرة موجود مسبقًا");
      return;
    }

    let ticket = {
      id: tickets.length + 1,
      ticketNumber,
      accountName,
      platform,
      status: "مفتوحة"
    };

    tickets.push(ticket);
    localStorage.setItem("tickets", JSON.stringify(tickets));
    loadTickets();

    document.getElementById("ticketNumber").value = "";
    document.getElementById("accountName").value = "";
  }

  function loadTickets() {
    let tickets = JSON.parse(localStorage.getItem("tickets")) || [];
    let table = document.getElementById("ticketTable");
    table.innerHTML = "";
    tickets.forEach(t => {
      table.innerHTML += `<tr>
        <td>${t.id}</td>
        <td>${t.ticketNumber}</td>
        <td>${t.accountName}</td>
        <td>${t.platform}</td>
        <td>${t.status}</td>
      </tr>`;
    });
  }
</script>

